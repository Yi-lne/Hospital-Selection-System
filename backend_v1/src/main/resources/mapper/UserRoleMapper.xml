<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.HospitalSelection.mapper.UserRoleMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.chen.HospitalSelection.model.UserRole">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 基础查询字段 -->
    <sql id="Base_Column_List">
        id, user_id, role_id, create_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_user_role
        WHERE id = #{id}
    </select>

    <!-- 根据用户ID查询角色关联 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_user_role
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <!-- 根据角色ID查询用户关联 -->
    <select id="selectByRoleId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_user_role
        WHERE role_id = #{roleId}
        ORDER BY create_time DESC
    </select>

    <!-- 查询用户是否拥有指定角色 -->
    <select id="exists" resultType="java.lang.Boolean">
        SELECT COUNT(*) > 0
        FROM sys_user_role
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </select>

    <!-- 统计用户的角色数量 -->
    <select id="countByUserId" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM sys_user_role
        WHERE user_id = #{userId}
    </select>

    <!-- 统计角色的用户数量 -->
    <select id="countByRoleId" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM sys_user_role
        WHERE role_id = #{roleId}
    </select>

    <!-- 插入用户角色关联 -->
    <insert id="insert" parameterType="com.chen.HospitalSelection.model.UserRole" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user_role (user_id, role_id, create_time)
        VALUES (#{userId}, #{roleId}, #{createTime})
    </insert>

    <!-- 批量插入用户角色关联 -->
    <insert id="insertBatch">
        INSERT INTO sys_user_role (user_id, role_id, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.roleId}, #{item.createTime})
        </foreach>
    </insert>

    <!-- 删除用户角色关联 -->
    <delete id="deleteById">
        DELETE FROM sys_user_role
        WHERE id = #{id}
    </delete>

    <!-- 根据用户ID删除所有角色关联 -->
    <delete id="deleteByUserId">
        DELETE FROM sys_user_role
        WHERE user_id = #{userId}
    </delete>

    <!-- 根据角色ID删除所有用户关联 -->
    <delete id="deleteByRoleId">
        DELETE FROM sys_user_role
        WHERE role_id = #{roleId}
    </delete>

    <!-- 删除指定的用户角色关联 -->
    <delete id="deleteByUserIdAndRoleId">
        DELETE FROM sys_user_role
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>

    <!-- 批量删除用户角色关联 -->
    <delete id="deleteBatch">
        DELETE FROM sys_user_role
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
