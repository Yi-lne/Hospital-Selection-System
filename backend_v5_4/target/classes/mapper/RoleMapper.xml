<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.HospitalSelection.mapper.RoleMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.chen.HospitalSelection.model.Role">
        <id column="id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="role_code" property="roleCode"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 基础查询字段 -->
    <sql id="Base_Column_List">
        id, role_name, role_code, is_deleted, create_time
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_role
        WHERE id = #{id} AND is_deleted = 0
    </select>

    <!-- 根据角色编码查询 -->
    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_role
        WHERE role_code = #{roleCode} AND is_deleted = 0
    </select>

    <!-- 查询所有角色 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_role
        WHERE is_deleted = 0
        ORDER BY id ASC
    </select>

    <!-- 根据用户ID查询角色列表 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT DISTINCT r.id, r.role_name, r.role_code, r.is_deleted, r.create_time
        FROM sys_role r
        INNER JOIN sys_user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId} AND r.is_deleted = 0
    </select>

    <!-- 条件查询 -->
    <select id="selectByCondition" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM sys_role
        <where>
            is_deleted = 0
            <if test="roleName != null and roleName != ''">
                AND role_name LIKE CONCAT('%', #{roleName}, '%')
            </if>
            <if test="roleCode != null and roleCode != ''">
                AND role_code LIKE CONCAT('%', #{roleCode}, '%')
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <!-- 插入角色 -->
    <insert id="insert" parameterType="com.chen.HospitalSelection.model.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_role (role_name, role_code, is_deleted, create_time)
        VALUES (#{roleName}, #{roleCode}, #{isDeleted}, #{createTime})
    </insert>

    <!-- 更新角色 -->
    <update id="update" parameterType="com.chen.HospitalSelection.model.Role">
        UPDATE sys_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="roleCode != null and roleCode != ''">
                role_code = #{roleCode},
            </if>
        </set>
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <!-- 更新角色（接口方法名：updateById） -->
    <update id="updateById" parameterType="com.chen.HospitalSelection.model.Role">
        UPDATE sys_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="roleCode != null and roleCode != ''">
                role_code = #{roleCode},
            </if>
        </set>
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <!-- 逻辑删除 -->
    <update id="deleteById">
        UPDATE sys_role
        SET is_deleted = 1
        WHERE id = #{id}
    </update>

    <!-- 批量逻辑删除 -->
    <update id="deleteBatch">
        UPDATE sys_role
        SET is_deleted = 1
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 统计角色数量 -->
    <select id="countByCondition" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM sys_role
        WHERE is_deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (role_name LIKE CONCAT('%', #{keyword}, '%')
            OR role_code LIKE CONCAT('%', #{keyword}, '%'))
        </if>
    </select>

</mapper>
